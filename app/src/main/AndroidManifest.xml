<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gfb.watchlist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WatchlistApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.impl.SplashViewImpl"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--New activities MVP-->
        <activity
            android:name=".ui.archive.impl.ArchiveViewImpl"
            android:label="@string/title_archive"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.login.impl.LoginViewImpl"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.preview.impl.PreviewViewImpl"
            android:label="@string/title_details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.addToList.impl.AddToListViewImpl"
            android:label="@string/title_add_content"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.impl.MainViewImpl"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.newUser.impl.NewUserViewImpl"
            android:label="@string/title_new_user"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.changePassword.impl.ChangePasswordViewImpl"
            android:label="@string/title_change_password"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.forgotPassword.impl.ForgotPasswordViewImpl"
            android:label="@string/title_forgot_password"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.contentDetails.impl.ContentDetailsViewImpl"
            android:label="@string/title_details"
            android:screenOrientation="portrait" />

    </application>

</manifest>